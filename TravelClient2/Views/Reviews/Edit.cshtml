<h1>Edit Info:</h1>
<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  <label for="city">City Name</label>
  <input id="city" name="city" type="text" value="@(Model.City)">
  <label for="country">Country Name</label>
  <input id="country" name="country" type="text" value="@(Model.Country)">
  <label for="rating">Location Rating</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <label for="description">Location Review</label>
  <input id="description" name="description" type="text" value="@(Model.Description)">
  <button type="submit">Update!</button>
</form>

<a href="/Reviews/Details/@(Model.ReviewId)">
  <p>Return to Details</p>
</a>