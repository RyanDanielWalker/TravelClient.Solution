@{
  ViewData["Title"] = "Home Page";
}

<h1>Add a Review:</h1>

<form action="/reviews/create" method="post">
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number" required="required">
  <label for="description">Description</label>
  <input id="description" name="description" type="text" required="required">
  <label for="city">City</label>
  <input id="city" name="city" type="text" required="required">
  <label for="country">Country</label>
  <input id="country" name="country" type="text" required="required">
  <button type="submit">Add!</button>
</form>